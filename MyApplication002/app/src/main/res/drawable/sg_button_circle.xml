<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval" >
            <corners android:radius="@dimen/size90"/>
            <solid android:color="#ffffff" />
            <size android:width="64dp" android:height="64dp"/>
        </shape>
    </item>

    <item android:bottom="3dp" android:right="3dp" android:top="3dp" android:left="3dp" >
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval" >
                    <corners android:radius="@dimen/size90"/>
                    <solid android:color="#e84e3d" />
                    <size android:width="61dp" android:height="61dp"/>
                </shape>
            </item>

            <item >
                <shape android:shape="oval" >
                    <corners android:radius="@dimen/size90"/>
                    <solid  android:color="#31cd72" />
                    <size android:width="61dp" android:height="61dp"/>
                </shape>
            </item>

        </selector>
    </item>

</layer-list>